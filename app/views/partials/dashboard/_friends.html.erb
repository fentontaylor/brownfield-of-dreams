<section class='friends-list'>
  <hr>
  <h4>My Friends</h4>
  <% if has_friends %>
    <% user.friends.each do |friend| %>
      <ul>
        <li id="friend-<%= friend.id %>">
          <%= "#{friend.first_name} #{friend.last_name} (#{friend.gh_user_name})" %>
          <%= button_to 'Remove Friend', '/friendship', params: {user_id: user.id, friend_id: friend.id}, method: :delete %>
        </li>
      </ul>
    <% end %>
  <% elsif current_user.token %>
    <li>You haven't added any friends yet.</li>
  <% else %>
    <li>Connect to GitHub first to see if there are any users of this app that you can add as friends!</li>
  <% end %>
</section>
