<h2>New Tutorial</h2>
<%= form_for [:admin, @tutorial] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "block col-4 field" %>
  <%= f.label :description %>
  <%= f.text_area :description, class: "block col-4 field"  %>
  <%= f.label :thumbnail %>
  <%= f.text_field :thumbnail, class: "block col-4 field"  %>
  <%= f.radio_button :classroom, false %>
  <%= f.label :free_content, 'Free Content' %>
  <%= f.radio_button :classroom, true %>
  <%= f.label :classroom_content, 'Classroom Content' %>

  <h3>Videos</h3>

<div id="import-youtube-playlist-link">
  <%= link_to 'Import YouTube Playlist', new_admin_tutorial_path, remote: true %>
</div>


  <%= f.fields_for :videos do |builder| %>
    <%= f.label :youtube_url %>
    <%= f.text_field :video_id, class: "block col-4 field" %>
  <% end %>

  <%= f.submit "Save", class: "mt2 btn btn-primary mb1 bg-teal"  %>
<% end %>
