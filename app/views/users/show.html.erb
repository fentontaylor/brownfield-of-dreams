<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
  <section>
    <h3>Bookmarked Segments</h3>
  </section>

  <section class='github-info'>
    <h2>GitHub</h2>
    <hr>
    <section class='github-repos'>
      <h3>Repos</h3>
      <ul>
        <% @user.repos.each do |repo| %>
          <li><%= link_to repo.name, repo.html_url, class: 'repo-link' %></li>
        <% end %>
      </ul>
    </section>

    <section class='github-followers'>
      <h3>Followers</h3>
      <ul>
        <% @user.followers.each do |follower| %>
          <li><%= link_to follower.user_name, follower.html_url, class: 'follower-link' %></li>
        <% end %>
      </ul>

    </section>
  </section>
</section>
